<!doctype html>
<html>
<head>
  {include="page.head"}
</head>
<body>
  {include="page.header"}

  <main class="container">
    <div class="row">
      <div class="col-lg-6 offset-lg-3">
        <h1>Sign in</h1>
        <p class="lead">Letâ€™s manage <b>{#TITLE#}</b>.</p>
  
        <form class="mt-4" method="post" action="{""|Path::signin}{if="$target!=NULL"}&amp;target={$target}{/if}">
          <div class="mb-3">
            <label for="login" class="form-label">Login</label>
            <input type="text" class="form-control" id="login" name="login" placeholder="Username" autofocus>
          </div>
  
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Password">
          </div>
  
          <input type="hidden" name="token" value="{$token}">
          <button type="submit" class="mt-3 btn btn-primary">Sign in</button>
        </form>
      </div>
    </div>
  </main>
  
  {include="page.footer"}
</body>
</html>