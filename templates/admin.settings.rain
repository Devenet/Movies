<!doctype html>
<html>
<head>
{include="page.head"}
<style>option {display:block; padding:4px 8px;}</style>
</head>
<body>
{include="page.menu"}

<div class="container">
<div class="row">
<div class="col-md-12">
	<div class="page-header no-espace-top">
		<h2>Settings</h2>
	</div>
</div>
</div>

{if="isset($_GET['update'])"}
<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<div class="alert alert-success text-center">
			Settings have been well updated.
		</div>
	</div>
</div>
{/if}

<form class="form-horizontal espace-top" method="post" action="{""|Path::settings}">
<fieldset>
	<div class="form-group">
		<label for="login" class="control-label col-md-2">Login</label>
		<div class="col-md-8">
			<input type="text" class="form-control" id="login" name="login" value="{$username}" placeholder="Username" disabled="disabled" />
			<p class="help-block no-espace-bottom">To change your username, please delete file <code>data/settings.php</code>.</p>
		</div>
	</div>
	<div class="form-group">
		<label for="password" class="control-label col-md-2">Password</label>
		<div class="col-md-8">
			<input type="password" class="form-control" id="password" name="password" placeholder="Password" />
			<p class="help-block">Leave blank if you want to keep your password.</p>
		</div>
	</div>

	<div class="form-group espace-top-lg">
		<label for="title" class="control-label col-md-2">Title</label>
		<div class="col-md-8">
			<input type="text" class="form-control" id="title" name="title" placeholder=MyMovies" value="{#TITLE#}" />
		</div>
	</div>
	<div class="form-group">
		<label for="robots" class="control-label col-md-2">Robots</label>
		<div class="col-md-8">
			<label class="checkbox-inline" for="robots_index">
				<input type="checkbox" name="robots[]" value="index" id="robots_index" {if="$robots.index"}checked="checked" {/if}/> Index
			</label>
			<label class="checkbox-inline" for="robots_follow">
				<input type="checkbox" name="robots[]" value="follow" id="robots_follow" {if="$robots.follow"}checked="checked" {/if}/> Follow
			</label>
			<label class="checkbox-inline" for="robots_archive">
				<input type="checkbox" name="robots[]" value="archive" id="robots_archive" {if="$robots.archive"}checked="checked" {/if}/> Archive
			</label>
		</div>
	</div>


	<div class="clearfix"></div>
	<hr class="espace-top" />
	<div class="form-group espace-top-lg">
		<label for="pagination" class="control-label col-md-2">Movies per page</label>
		<div class="col-md-8">
			<input type="number" class="form-control" id="pagination" name="pagination" placeholder="10" value="{#PAGINATION#}" min="2" step="1" />
			<p class="help-block">Default is 10 per pages. Must be greater than or equal to 2.</p>
		</div>
	</div>
	<div class="form-group">
		<label for="login" class="control-label col-md-2">Prefered language</label>
		<div class="col-md-8">
			<select class="form-control" id="locale" name="locale">
				{$locales}
			</select>
			<p class="help-block">Used for IMDB search when importing information to add a movie.</p>
		</div>
	</div>


	<input type="hidden" name="token" value="{$token}" />

	<div class="form-group form-controls">
		<div class="col-md-6 col-md-offset-2">
			<button type="submit" class="btn btn-primary">Update</button>
			<button type="reset" class="btn btn-default">Reset</button>
		</div>
	</div>
</fieldset>
</form>

</div>

{include="page.foot"}
</body>
</html>
