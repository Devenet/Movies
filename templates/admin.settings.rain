<!doctype html>
<html>
<head>
{include="page.head"}
<style>option {display:block; padding:4px 8px;}</style>
</head>
<body>
{include="page.menu"}

<div class="container">
<div class="row">
<div class="col-lg-12">
	<div class="page-header no-espace-top">
		<h2>Settings</h2>
	</div>
</div>
</div>

{if="isset($_GET['update'])"}
<div class="row">
	<div class="col-lg-8 col-lg-offset-2">
		<div class="alert alert-success text-center">
			Settings have been well updated.
		</div>
	</div>
</div>
{/if}

<form class="form-horizontal espace-top" method="post" action="{""|Path::settings}">
<fieldset>
	<div class="form-group">
		<label for="login" class="control-label col-lg-2">Login</label>
		<div class="col-lg-8">
			<input type="text" class="form-control" id="login" name="login" value="{$username}" placeholder="Username" disabled="disabled" />
			<p class="help-block no-espace-bottom">To change your username, please delete file <code>data/settings.php</code>.</p>
		</div>
	</div>
	<div class="form-group">
		<label for="password" class="control-label col-lg-2">Password</label>
		<div class="col-lg-8">
			<input type="password" class="form-control" id="password" name="password" placeholder="Password" />
			<p class="help-block">Leave blank if you want to keep your password.</p>
		</div>
	</div>

	<div class="form-group espace-top">
		<label for="title" class="control-label col-lg-2">Title of the page</label>
		<div class="col-lg-8">
			<input type="text" class="form-control" id="title" name="title" placeholder="myMovies" value="{#TITLE#}" />
		</div>
	</div>
	<div class="form-group espace-top-lg">
		<label for="login" class="control-label col-lg-2">Prefered language</label>
		<div class="col-lg-8">
			<select class="form-control" id="locale" name="locale">
				{$locales}
			</select>
			<p class="help-block">Used for IMDB search when importing information to add a movie.</p>
		</div>
	</div>

	<input type="hidden" name="token" value="{$token}" />

	<div class="form-group form-controls">
		<div class="col-lg-6 col-lg-offset-2">
			<button type="submit" class="btn btn-primary">Update</button>
			<button type="reset" class="btn btn-default">Reset</button>
		</div>
	</div>
</fieldset>
</form>

</div>

{include="page.foot"}
</body>
</html>