<!doctype html>
<html>
<head>
{include="page.head"}
</head>
<body>
{include="page.menu"}

<div class="container">
<div class="row">
<div class="col-lg-12">
	<div class="page-header no-espace-top">
		<h2>
			Logs <small><i class="icon-file-text-alt"></i> {$filename}</small>
			<form class="pull-right form-inline" method="post" action="{""|Path::logs}">
				<input type="hidden" name="token" value="{$token}" />
				<input type="hidden" name="purge-logs" value="true" />
				<button type="submit" class="btn btn-warning"><i class="icon-trash"></i> Purge logs</button>
			</form>
		</h2>
	</div>
</div>
</div>

<div class="row espace-top">
	<div class="col-lg-10 col-lg-offset-1">
		<pre>{$logs}</pre>
	</div>
</div>
</div>

{include="page.foot"}
</body>
</html>