<!doctype html>
<html>
<head>
{include="page.head"}
</head>
<body>
{include="page.menu"}

<div class="container">
<article class="movie">
<div class="row">
	<div class="col-lg-12">
		<div class="page-header">
			<h2>
				{if="isLogged()"}<span class="movie-tools"><a href="{$id|Path::edit}" class="text-success tip" title="Edit&nbsp;movie" data-placement="right"><i class="icon-pencil"></i></a> <a href="{$id|Path::delete}&amp;token={$token}" class="text-danger tip" title="Delete&nbsp;movie" data-placement="right" onclick="return confirmDeleteMovie('{$movie['title']}')"><i class="icon-trash"></i></a></span>{/if}
				{$movie['title']}
				<span class="pull-right espace-right {if="$movie['status'] == Movie::SEEN"}text-success{else}text-warning{/if}">{$displayStatus}</span>
			</h2>
		</div>
		{if="!empty($movie['original_title'])"}<h3>{$movie['original_title']}</h3>{/if}
	</div>
</div>

<div class="row espace-top">
	<div class="col-lg-3 col-md-3 col-sm-6 col-xs-12 text-center espace-bottom">
		<p><img src="{if="$movie['link_image'] != NULL"}{$movie['link_image']}{else}assets/img/movie.jpg{/if}" alt="{$movie['title']}" class="img-responsive img-thumbnail" width="160" height="213" /></p>
		{if="$movie['status'] == Movie::SEEN"}{$displayNote}{/if}
	</div>
	<div class="col-lg-2 col-md-2 col-sm-6 col-xs-12 aside text-muted pull-right">
		<div class="espace-bottom">
			<p><span class="{if="$movie['status'] == Movie::SEEN"}text-success{else}text-warning{/if}">{$displayStatus} {if="$movie['status'] == Movie::SEEN"}Already seen{else}Not seen yet{/if}</span></p>
			{if="$movie['owned']"}<p><i class="icon-film"></i> I have it</p>{/if}
		</div>
		{if="!empty($movie['duration'])"}<p>{$movie['duration']} min</p>{/if}
		{if="!empty($movie['release_date'])"}<p><span class="tip" data-title="Release&nbsp;date"><i class="icon-calendar"></i></span> {$movie['release_date']}</p>{/if}
		{if="!empty($country)"}<p>{$country|displayFlagWithName}</p>{/if}
		<ul class="list-unstyled espace-top">
			{$displayGenres}
		</ul>
		{if="!empty($movie['link_website'])"}<p class="espace-top"><a href="{$movie['link_website']}" rel="external" class="normal tip" title="External information"><i class="icon-globe"></i> more online</a></p>{/if}
	</div>
	<div class="clearfix visible-sm"></div>
	<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
		<p class="synopsis">{$movie['synopsis']}</p>
	</div>
</div>

</article>
</div>

{include="page.foot"}
</body>
</html>