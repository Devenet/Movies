<!doctype html>
<html>
<head>
{include="page.head"}
</head>
<body>
{include="page.menu"}

<div class="container">
<div class="row">
<div class="col-lg-12">
	<h3>Please sign in to manage your “{#TITLE#}”.</h3>
	<hr />
</div>
</div>

<form class="form-horizontal espace-top" method="post" action="{""|Path::signin}">
<fieldset>
	<div class="form-group">
		<label for="login" class="control-label col-lg-2">Login</label>
		<div class="col-lg-6">
			<input type="text" class="form-control" id="login" name="login" placeholder="Username" />
		</div>
	</div>
	<div class="form-group">
		<label for="password" class="control-label col-lg-2">Password</label>
		<div class="col-lg-6">
			<input type="password" class="form-control" id="password" name="password" placeholder="Password" />
		</div>
	</div>
	<input type="hidden" name="token" value="{$token}" />
	<div class="form-group form-controls">
		<div class="col-lg-6 col-offset-2">
			<button type="submit" class="btn btn-primary">Sign in</button>
		</div>
	</div>
</fieldset>
</form>
</div>

{include="page.foot"}
</body>
</html>